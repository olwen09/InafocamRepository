<div class="row">
    <form class="col s12 formValidate" method="post" asp-area="Profesores" asp-controller="Profesor" asp-action="Guardar">

        <input type="hidden" asp-for="TeacherId" />
        <input type="hidden" asp-for="ContactId" />
        <input type="hidden" asp-for="StatusId" />
        <input type="hidden" asp-for="HigherTeacherEducation.StatusId" />
        <input type="hidden" asp-for="HigherTeacherEducation.TeacherId" />
        <input type="hidden" asp-for="HigherTeacherEducation.TeacherEducationId" />
        <input type="hidden" asp-for="HigherTeacherEducationId" />
        <input type="hidden" asp-for="TeacherHiringTypeId" />
  


        <div>
            <span asp-validation-sumary=""></span>
        </div>


        @{ var prueba = Model.Contact?.ContactName; }



        <div class="card">
            <div class="card-content">

                <h4 class="card-title">Información Personal</h4>

                <div class="row ">


                    <div class="input-field col s12 m6 l3">

                        @*<i class="material-icons prefix">contacts</i>*@

                        <input value="lll" id="id" type="text" class="validat" disabled style="font-weight: bold;">

                        <label for="id">Teacher ID</label>


                    </div>


                    <div class="input-field col s12 m6 l3">
                        <input asp-for="Contact.ContactName" id="nombre" type="text" class="validate">
                        <label for="nombre">Nombre</label>
                        <span class="red-text validationDisplay"></span>
                    </div>

                    <div class="input-field col s12 m6 l3">
                        <input asp-for="Contact.ContactLastname" id="apellido" type="text" class="validate">
                        <label for="apellido">Apellido</label>
                        <span class="red-text validationDisplay"></span>
                    </div>

                    <div class="input-field col s12 m6 l3">
                        <div class="row">
                            <label for="select2User" class="col s12">Genero</label>
                        </div>
                        <select class="form-control js-example-basic-single" style="width: 100%">
                        </select>


                    </div>

                </div>

                <div class="row">

                    <div class="input-field col s12 m6 l3">
                        <div class="row">
                            <label for="select2User" class="col s12">Tipo de Documento</label>
                        </div>
                        <select asp-for="Contact.ContactTypeId" class="form-control js-example-basic-single" style="width: 100%" asp-items="ViewBag.ContactTypes">
                        </select>


                    </div>

                    <div class="input-field col s12 m6 l3">
                        <div class="row">
                            <label for="select2User" class="col s12">Tipo de Contacto</label>
                        </div>
                        <select asp-for="Contact.DocumentType" class="form-control js-example-basic-single" style="width: 100%" asp-items="ViewBag.DocumentType">
                        </select>


                    </div>


                    <div class="input-field col s12 m6 l3">
                        <input asp-for="Contact.ContactDocumentNumber" id="numerodocumento" type="text" class="validate">
                        <label for="numerodocumento">Numero del Documento</label>
                        <span class="red-text validationDisplay"></span>
                    </div>

                    <div class="input-field col s12 m6 l3">
                        <div class="row">
                            <label for="select2User" class="col s12">Nacionalidad</label>
                        </div>
                        <select asp-for="Contact.ContactNationalityId" class="form-control js-example-basic-single" style="width: 100%" asp-items=" ViewBag.Nationality">
                        </select>


                    </div>

                </div>



                <div class="row">








                    <div class="input-field col s12 m6 l4">
                        <input asp-for="Contact.ContactBornPlace" id="lugarnacimiento" type="text" class="validate">
                        <label for="lugarnacimiento">Lugar de Nacimiento</label>
                        <span class="red-text validationDisplay"></span>
                    </div>

                    <div class="input-field col s12 m6 l4">
                        <input asp-for="Contact.ContactBornDate" id="fechanacimiento" type="text" class="datepicker">
                        <label for="fechanacimiento">Fecha de Nacimiento</label>
                        <span class="red-text validationDisplay"></span>
                    </div>






                    <div class="input-field col s12 m6 l4">
                        <div class="row">
                            <label for="select2User" class="col s12">Estado de Material</label>
                        </div>
                        <select asp-for="Contact.ContactMaritalStatusId" class="form-control js-example-basic-single" style="width: 100%" asp-items="ViewBag.MatirialStatus">
                        </select>


                    </div>



                </div>

            </div>



        </div>

        <div class="card">
            <div class="card-content">

                <h4 class="card-title">Información Academica</h4>

                <div class="input-field col s12 m6 l6">
                    <input asp-for="TeacherResearchProcess" id="enproceso" type="number" class="validate">
                    <label for="enproceso">En Proceso</label>
                    <span class="red-text validationDisplay"></span>
                </div>

                <div class="input-field col s12 m6 l6">
                    <input asp-for="TeacherResearchPublished" id="publicado" type="number" class="validate">
                    <label for="publicado">Publicado</label>
                    <span class="red-text validationDisplay"></span>
                </div>
            </div>
        </div>


        <div class="card">
            <div class="card-content">

                <h4 class="card-title">Agregar Preparación Académica</h4>




                <div class="input-field col s12 m6 l3">
                    <input asp-for="HigherTeacherEducation.TeacherEducationTitle" id="tituloeducacion" type="text" class="validate">
                    <label for="tituloeducacion">Titulo de la Educacion</label>
                    <span class="red-text validationDisplay"></span>
                </div>

                <div class="input-field col s12 m6 l3">
                    <input asp-for="HigherTeacherEducation.TeacherEducationInstitution" id="institucionformadora" type="text" class="validate">
                    <label for="institucionformadora">Institucion Formadora</label>
                    <span class="red-text validationDisplay"></span>
                </div>

                <div class="input-field col s12 m6 l3">
                    <input asp-for="HigherTeacherEducation.TeacherEducationFinishDate" id="fechatermino" type="text" class="datepicker">
                    <label for="institucionformadora">Fecha de Término</label>
                    <span class="red-text validationDisplay"></span>
                </div>

                <div class="input-field col s12 m6 l3">
                    <div class="row">
                        <label for="select2User" class="col s12">Tipo de Educacion</label>
                    </div>
                    <select asp-for="HigherTeacherEducation.EducationTypeId" class="form-control js-example-basic-single" style="width: 100%" asp-items="ViewBag.EducationType">
                    </select>


                </div>

            </div>
        </div>

        <div class="input-field col s12">

            <button class="teal btn waves-effect waves-light" type="submit">
                <i class="material-icons left">save</i>
                Guardar
            </button>



            <a class="red btn waves-effect waves-light">
                <i class="material-icons left">cancel</i>
                Anular
            </a>

            <a class="white btn waves-effect waves-light black-text">
                <i class="material-icons left">cleaning_services</i>
                Limpiar
            </a>

        </div>

    </form>


</div>

